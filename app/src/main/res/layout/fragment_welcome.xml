<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.slashandhyphen.saplyn.Authentication.WelcomeFragment"
    android:id="@+id/fragment_welcome"
    >


    <Button
        android:text="Sign in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_login_welcome"
        />

    <Button
        android:text="Sign up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_login_welcome"
        android:layout_alignRight="@+id/button_login_welcome"
        android:layout_alignEnd="@+id/button_login_welcome"
        android:id="@+id/button_register_welcome"
        />

</RelativeLayout>
